<mvc:View controllerName="mybank.controller.Main"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Page id="page" title="{i18n>title}">

		<headerContent>
			<Button id="Btn1" type="Emphasized" text="{i18n>Btn1}"/>
		</headerContent>

		<content>
			<!-- Bank Details fragment -->
			<core:Fragment fragmentName="mybank.view.Fragments.BankDetails" type="XML" />

		</content>
			<!-- Pannel For Card Details -->
		<Panel id="p2" expandable="true" headerText="{i18n>PHT}" width="auto" class="sapUiResponsiveMargin">
			<content>
				<List id="myList" items="">
					<items>
						<StandardListItem id="SL1" title="Master Card (12345678901243)" description="Debit card: Assigned on 23 Aug 2017" icon="sap-icon://credit-card" iconInset="false" highlight="Information" info="{i18n>Info1}" infoState="Information" infoStateInverted="true" />

						<StandardListItem id="SL2" title="Visa (1234567854345)" description="Credit card: Assigned on 20 Oct 2020" icon="sap-icon://credit-card" iconInset="false" highlight="Error" info="{i18n>Info2}" infoState="Error" infoStateInverted="true" />

						<StandardListItem id="SL3" title="Master card (1236578954637)" description="Debit Card: Assigned on 22 Aug 2017" icon="sap-icon://credit-card" iconInset="false" highlight="Success" info="{i18n>Info3}" infoState="Success" infoStateInverted="true" />
					</items>
				</List>
			</content>
		</Panel>
	</Page>
</mvc:View>
